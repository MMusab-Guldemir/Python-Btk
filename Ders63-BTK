ogrenciler = ["Ali", "Ahmet", "Canan"]
notlar = [50, 60, 80]

# [("Ali", 50), ("Ahmet", 60), ("Canan", 80)]

liste = [(ogrenciler[i], notlar[i]) for i in range(0, len(ogrenciler))]
liste_dict = { key:value for (key, value) in liste if value > 50}
print(liste_dict)


