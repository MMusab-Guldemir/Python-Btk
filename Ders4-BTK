kurs = "Python ile Programlama"

print(kurs[0])  # P
print(kurs[-1])     # a

adet = len(kurs)    # 22

print(adet)
print(kurs[adet -1])    # a
#---------22 tane ama -1 yapmamız gerekir çünkü 0 dan başlıyor

print(kurs[0:6])        # Python
print(kurs[:6])         # Python
print(kurs[11:len(kurs)])       # Programlama
print(kurs[11:])            # Programlama
print(kurs[-11:-1])     # Programlam

print(kurs[0:22:2])    # Pto l rgalm

print(kurs[::-1])      # amalmargorP eli nohtyP
